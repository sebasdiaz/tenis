<h1>Listing players</h1>

<table>
  <tr>
    <th>Surname</th>
    <th>Forename</th>
    <th>Plays</th>
    <th>Residence</th>
    <th>Birthday</th>
    <th>Height</th>
    <th>Weight</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @players.each do |player| %>
  <tr>
    <td><%= player.surname %></td>
    <td><%= player.forename %></td>
    <td><%= player.plays %></td>
    <td><%= player.residence %></td>
    <td><%= player.birthday %></td>
    <td><%= player.height %></td>
    <td><%= player.weight %></td>
    <td><%= link_to 'Show', player %></td>
    <td><%= link_to 'Edit', edit_player_path(player) %></td>
    <td><%= link_to 'Destroy', player, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

