<h3>Telefonos</h3>
<table>
  <tr>
    <th>Detalle</th>
    <th>Numero</th>
    <th></th>
    <th></th>
  </tr>
<% @player.playerphones.each do |playerphone| %>
  <tr>
    <td><%= playerphone.name %></td>
    <td><%= playerphone.phone %></td>
    <td><%= link_to 'Editar Numero', edit_player_playerphone_path(@player) %></td>
    <td><%= link_to 'Quitar Telefono', [@player,playerphone], :confirm => 'Quitar telefono?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<p><%= link_to 'Agregar Telefono', new_player_playerphone_path(@player) %></p>

<h3>Correo Electronico</h3>
<table>
  <tr>
    <th>Detalle</th>
    <th>Direccion</th>
    <th></th>
    <th></th>
  </tr>

<% @player.playeremails.each do |playeremail| %>
  <tr>
    <td><%= playeremail.name %></td>
    <td><%= playeremail.email %></td>
    <td><%= link_to 'Editar Correo', edit_player_playeremail_path(playeremail) %></td>
    <td><%= link_to 'Quitar Email', [@player,playeremail], :confirm => 'Quitar correo electronico?', :method => :delete %></td>
